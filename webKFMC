    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get elements
            const permitsBtn = document.getElementById('permitsBtn');
            const clearanceBtn = document.getElementById('clearanceBtn');
            const backFromPermits = document.getElementById('backFromPermits');
            const backFromClearance = document.getElementById('backFromClearance');
            const permitsSection = document.getElementById('permitsManagement');
            const clearanceSection = document.getElementById('clearanceManagement');
            const mainServices = document.getElementById('mainServices');
            const hospitalInfo = document.getElementById('hospitalInfo');
            
            // Set current year in footer
            document.getElementById('currentYear').textContent = new Date().getFullYear();
            
            // Show Permits Management
            permitsBtn.addEventListener('click', function(e) {
                e.preventDefault();
                toggleSections(true, false);
            });
            
            // Show Clearance Management
            clearanceBtn.addEventListener('click', function(e) {
                e.preventDefault();
                toggleSections(false, true);
            });
            
            // Back to main from Permits
            backFromPermits.addEventListener('click', function(e) {
                e.preventDefault();
                toggleSections(false, false);
            });
            
            // Back to main from Clearance
            backFromClearance.addEventListener('click', function(e) {
                e.preventDefault();
                toggleSections(false, false);
            });
            
            // Function to toggle sections visibility
            function toggleSections(showPermits, showClearance) {
                if (showPermits) {
                    permitsSection.style.display = 'block';
                    clearanceSection.style.display = 'none';
                    mainServices.style.display = 'none';
                    hospitalInfo.style.display = 'none';
                } else if (showClearance) {
                    clearanceSection.style.display = 'block';
                    permitsSection.style.display = 'none';
                    mainServices.style.display = 'none';
                    hospitalInfo.style.display = 'none';
                } else {
                    permitsSection.style.display = 'none';
                    clearanceSection.style.display = 'none';
                    mainServices.style.display = 'block';
                    hospitalInfo.style.display = 'block';
                }
                
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
            
            // Simulate loading data
            console.log('تم تحميل النظام بنجاح');
        });
    </script>
